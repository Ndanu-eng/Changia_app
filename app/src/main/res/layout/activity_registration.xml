<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Join Changia today"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Phone Number"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:hint="+254 7__ ___ ___"
            android:inputType="phone"
            android:padding="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Changia.EditText" />

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Full Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:hint="Enter your name"
            android:padding="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Changia.EditText" />

        <!-- PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="4-digit PIN"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:hint="Enter PIN"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:padding="16dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Changia.EditText" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/primary_color"
            android:text="CREATE ACCOUNT"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Changia.Button" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Already have an account? Sign in"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>