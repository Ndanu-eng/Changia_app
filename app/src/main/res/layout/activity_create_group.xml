<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary_color"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/back_button_desc" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_group"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/start_saving"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Group Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_group_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:boxBackgroundColor="@color/white"
            android:hint="@string/group_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/group_name_hint"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Group Goal -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_group_goal"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxBackgroundColor="@color/white"
            android:hint="@string/target_amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_group_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/target_amount_hint"
                android:inputType="number"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Member Count -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxBackgroundColor="@color/white"
            android:hint="@string/number_of_members">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_member_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/member_count_hint"
                android:inputType="number"
                android:maxLines="1"
                android:text="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contribution Amount -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxBackgroundColor="@color/white"
            android:hint="@string/monthly_contribution">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contribution_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contribution_hint"
                android:inputType="number"
                android:maxLines="1"
                android:text="5000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contribution Frequency -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/contribution_frequency"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_contribution_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_weekly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekly" />

            <RadioButton
                android:id="@+id/rb_monthly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/monthly" />
        </RadioGroup>

        <!-- Create Button -->
        <Button
            android:id="@+id/btn_create_group"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/primary_color"
            android:text="@string/create_group_button"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>